<% if object.reflections.keys.include?(:variants) -%>
	<%= form_tag piggybak.cart_add_url do -%>
	<%= select_tag(:sellable_id, options_for_select(object.variants.collect { |v| [ "#{v.piggybak_sellable.description} #{v.piggybak_sellable.price}", v.piggybak_sellable.id ] })) %>
	<%= text_field_tag :quantity, 1 %>
	<%= submit_tag "Add to Cart", :id => "submit" %>
	<% end -%>
<% end -%>
